{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2015"
    ],
    "strict": false,
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "experimentalDecorators": true,
    "exclude": [
      "src/app/Modules/Admin/Theme",
      "src/app/Modules/Admin/**/View"
    ]
  }
}