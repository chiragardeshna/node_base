doctype html
html
    head
        meta(charset='UTF-8')
        meta(content='width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no', name='viewport')
        title Sign In | Bootstrap Based Admin Template - Material Design
        // Favicon
        link(rel='icon', href='../../favicon.ico', type='image/x-icon')
        // Google Fonts
        link(href='https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext', rel='stylesheet', type='text/css')
        link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet', type='text/css')
        // Bootstrap Core Css
        link(href='/admin/plugins/bootstrap/css/bootstrap.css', rel='stylesheet')
        // Waves Effect Css
        link(href='/admin/plugins/node-waves/waves.css', rel='stylesheet')
        // Animation Css
        link(href='/admin/plugins/animate-css/animate.css', rel='stylesheet')
        // Custom Css
        link(href='/admin/css/style.css', rel='stylesheet')
    body.login-page
        .login-box
            .logo
                a(href='javascript:void(0);')
                    | DA
            .card
                .body
                    form#sign_in(
                    method='POST'
                    action='/admin/auth'
                    )
                        .msg Sign in
                        .input-group
                            span.input-group-addon
                                i.material-icons person
                            .form-line
                                input.form-control(type='text', name='username', placeholder='Username', required='', autofocus='')
                        .input-group
                            span.input-group-addon
                                i.material-icons lock
                            .form-line
                                input.form-control(type='password', name='password', placeholder='Password', required='')
                        .row
                            .col-xs-8.p-t-5
                                input#rememberme.filled-in.chk-col-pink(type='checkbox', name='rememberme')
                                label(for='rememberme') Remember Me
                            .col-xs-4
                                button.btn.btn-block.bg-pink.waves-effect(type='submit') SIGN IN
                        .row.m-t-15.m-b--20
                            .col-xs-6
                                a(href='sign-up.html') Register Now!
                            .col-xs-6.align-right
                                a(href='forgot-password.html') Forgot Password?
        // Jquery Core Js
        script(src='/admin/plugins/jquery/jquery.min.js')
        // Bootstrap Core Js
        script(src='/admin/plugins/bootstrap/js/bootstrap.js')
        // Waves Effect Plugin Js
        script(src='/admin/plugins/node-waves/waves.js')
        // Validation Plugin Js
        script(src='/admin/plugins/jquery-validation/jquery.validate.js')
        // Custom Js
        script(src='/admin/js/admin.js')
        script(src='/admin/js/pages/examples/sign-in.js')
